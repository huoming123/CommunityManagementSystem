<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.communityManagementSystem.mapper.PaymentMapper">

    <resultMap type="com.design.communityManagementSystem.pojo.Payment" id="PaymentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="year" column="year" jdbcType="INTEGER"/>
        <result property="month" column="month" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="propertyFee" column="property_fee" jdbcType="NUMERIC"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PaymentMap">
        select
          id, user_id, created_at, year, month, fee, status
        from payment
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into payment(user_id, created_at, year, month, property_fee, status)
        values (#{userId}, now(), #{year}, #{month}, #{propertyFee}, 0)
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="PaymentMap">

        select *  from  payment a, users b where  a.user_id =b.id
          <if test="page.key.userId != null ">
              and  a.user_id =  #{page.key.userId}
          </if>
          <if test="page.key.year != null ">
              and  a.year =  #{page.key.year}
          </if>
          <if test="page.key.status != null ">
              and  a.status =  #{page.key.status}
          </if>
          <if test="page.key.month != null ">
              and  a.month =  #{page.key.month}
          </if>
            <!--排序 desc是降序-->
        order by
       a.created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(a.id) as count from  payment a, users b where  a.user_id =b.id
        <if test="page.key.userId != null ">
            and  a.user_id =  #{page.key.userId}
        </if>
        <if test="page.key.year != null ">
            and  a.year =  #{page.key.year}
        </if>
        <if test="page.key.status != null ">
            and  a.status =  #{page.key.status}
        </if>
        <if test="page.key.month != null ">
            and  a.month =  #{page.key.month}
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update payment
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="year != null">
                year = #{year},
            </if>
            <if test="month != null and month != ''">
                month = #{month},
            </if>
            <if test="propertyFee != null">
                property_fee = #{propertyFee},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from payment where id = #{id}
    </delete>
    <select id="queryByYearAndMonth" resultMap="PaymentMap">
        select * from payment where year =#{year} and  month=#{month};
    </select>
</mapper>

