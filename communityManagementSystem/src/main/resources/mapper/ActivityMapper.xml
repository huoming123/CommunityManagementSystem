<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.communityManagementSystem.mapper.ActivityMapper">

    <resultMap type="com.design.communityManagementSystem.pojo.Activity" id="ActivityMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="startDate" column="start_date" jdbcType="TIMESTAMP"/>
        <result property="endDate" column="end_date" jdbcType="TIMESTAMP"/>
        <result property="showIn" column="show_in" jdbcType="INTEGER"/>
        <result property="finshed" column="finshed" jdbcType="INTEGER"/>
        <result property="images" column="images" jdbcType="VARCHAR"/>
        <result property="contents" column="contents" jdbcType="VARCHAR"/>
        <result property="videos" column="videos" jdbcType="VARCHAR"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ActivityMap">
        select
          id, title, created_at, start_date, end_date, show_in, finshed, images, contents, videos, num, address
        from activity
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into activity(title, created_at, start_date, end_date, show_in, finshed, images, contents, videos, num, address)
        values (#{title},now(), #{startDate}, #{endDate}, 0, #{finshed}, #{images}, #{contents}, #{videos}, #{num}, #{address})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="ActivityMap">
        select *  from activity where created_at is not null
          <!--活动标题搜索搜索 不为空 则进入搜索条件-->
          <if test="page.key.title != null and page.key.title != ''">
              and  title like '%' #{page.key.title} '%'
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from activity   where created_at is not null
        <!--活动标题搜索搜索 不为空 则进入搜索条件-->
        <if test="page.key.title != null and page.key.title != ''">
            and  title like '%' #{page.key.title} '%'
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update activity
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="startDate != null">
                start_date = #{startDate},
            </if>
            <if test="endDate != null">
                end_date = #{endDate},
            </if>
            <if test="showIn != null">
                show_in = #{showIn},
            </if>
            <if test="finshed != null">
                finshed = #{finshed},
            </if>
            <if test="images != null and images != ''">
                images = #{images},
            </if>
            <if test="contents != null and contents != ''">
                contents = #{contents},
            </if>
            <if test="videos != null and videos != ''">
                videos = #{videos},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from activity where id = #{id}
    </delete>
    <select id="getIndexActivityList" resultMap="ActivityMap">
        select * from activity where show_in=1   order by created_at desc limit 3  ;
    </select>

    <select id="getIndexActivity" resultMap="ActivityMap">
            select * from activity where show_in=1   order by created_at desc limit 1  ;
    </select>

    <select id="getActivityList" resultMap="ActivityMap">
        select * from activity where created_at is not null ;
    </select>

</mapper>

