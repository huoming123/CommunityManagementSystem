<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.communityManagementSystem.mapper.PropertyFeeMapper">

    <resultMap type="com.design.communityManagementSystem.pojo.PropertyFee" id="PropertyFeeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="year" column="year" jdbcType="INTEGER"/>
        <result property="fee" column="fee" jdbcType="NUMERIC"/>
        <result property="month" column="month" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PropertyFeeMap">
        select
          id, created_at, created_by, year, fee, month
        from property_fee
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into property_fee(created_at, created_by, year, fee, month)
        values (now(), #{createdBy}, #{year}, #{fee}, #{month})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="PropertyFeeMap">

        select *  from property_fee  where created_at is not null
          <if test="page.key.year != null ">
              and  year =  #{page.key.year}
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from property_fee  where created_at is not null
        <if test="page.key.year != null ">
            and  year =  #{page.key.year}
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update property_fee
        <set>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="year != null">
                year = #{year},
            </if>
            <if test="fee != null">
                fee = #{fee},
            </if>
            <if test="month != null and month != ''">
                month = #{month},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from property_fee where id = #{id}
    </delete>

</mapper>

