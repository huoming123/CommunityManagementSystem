<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.communityManagementSystem.mapper.SignUpMapper">

    <resultMap type="com.design.communityManagementSystem.pojo.SignUp" id="SignUpMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="activityId" column="activity_id" jdbcType="INTEGER"/>
        <result property="checked" column="checked" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="userNo" column="user_no" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SignUpMap">
        select
          *
        from sign_up
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sign_up(user_name, sex, user_id, telephone, created_at, activity_id, checked, title, user_no,address)
        values (#{userName}, #{sex}, #{userId}, #{telephone}, now(), #{activityId}, 0, #{title}, #{userNo},#{address})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="SignUpMap">

        select *  from sign_up  where created_at is  not null
          <!--审核状态搜索 不为空 则进入搜索条件-->
          <if test="page.key.checked != null ">
              and  checked  = #{page.key.checked}
          </if>
          <if test="page.key.userNo != null and page.key.userNo != ''">
              and  user_no like '%' #{page.key.userNo} '%'
          </if>
          <!--活动主题搜索 不为空 则进入搜索条件-->
          <if test="page.key.activityId != null ">
              and  activity_id  = #{page.key.activityId}
          </if>
          <!--用户id搜索 不为空 则进入搜索条件-->
          <if test="page.key.userId != null">
              and  user_id = #{page.key.userId}
          </if>
          <!--用户搜索 不为空 则进入搜索条件-->
          <if test="page.key.userName != null and page.key.userName != ''">
              and  user_name like '%' #{page.key.userName} '%'
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(id) as count from sign_up    where created_at is  not null
        <!--审核状态搜索 不为空 则进入搜索条件-->
        <if test="page.key.checked != null ">
            and  checked  = #{page.key.checked}
        </if>
        <if test="page.key.userNo != null and page.key.userNo != ''">
            and  user_no like '%' #{page.key.userNo} '%'
        </if>
        <!--活动主题搜索 不为空 则进入搜索条件-->
        <if test="page.key.activityId != null ">
            and  activity_id  = #{page.key.activityId}
        </if>
        <!--用户id搜索 不为空 则进入搜索条件-->
        <if test="page.key.userId != null">
            and  user_id = #{page.key.userId}
        </if>
        <!--用户搜索 不为空 则进入搜索条件-->
        <if test="page.key.userName != null and page.key.userName != ''">
            and  user_name like '%' #{page.key.userName} '%'
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update sign_up
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="activityId != null">
                activity_id = #{activityId},
            </if>
            <if test="checked != null">
                checked = #{checked},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="userNo != null and userNo != ''">
                user_no = #{userNo},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sign_up where id = #{id}
    </delete>
    <select id="getListByActivityId" resultMap="SignUpMap">
           select * from sign_up where activity_id =#{id};
    </select>
    <select id="queryByUserNoAndActiveId"  resultMap="SignUpMap">
        select * from sign_up where user_no=#{userNo} and  activity_id = #{activityId};
    </select>
</mapper>

